#!/bin/sh
BUILD_DIR=$1

echo "Installing zsign..."

apt-get update
apt-get install -y git make g++ pkg-config libssl-dev libminizip-dev zlib1g-dev

git clone https://github.com/zhlynn/zsign.git /tmp/zsign
cd /tmp/zsign/build/linux
make clean && make

mkdir -p $BUILD_DIR/bin
cp zsign $BUILD_DIR/bin/zsign

chmod +x $BUILD_DIR/bin/zsign

echo "zsign installed in $BUILD_DIR/bin"
